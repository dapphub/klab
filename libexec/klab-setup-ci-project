#!/usr/bin/env bash
### Usage: KLAB_RESOURCES_PATH=foo KLAB_REPORT_PATH=bar KLAB_PROJECT_NAME=baz klab-setup-ci-project
set -u

KLAB_RESOURCES_PATH="${KLAB_RESOURCES_PATH:-$(dirname "${BASH_SOURCE}")/../resources}"
cp -t "${KLAB_REPORT_PATH}" -n "${KLAB_RESOURCES_PATH}/overview.css" "${KLAB_RESOURCES_PATH}/overview.js" "${KLAB_RESOURCES_PATH}/report.css"

cp -n "${KLAB_RESOURCES_PATH}/overview.html" "${KLAB_REPORT_PATH}/${KLAB_PROJECT_NAME}/index.html"
